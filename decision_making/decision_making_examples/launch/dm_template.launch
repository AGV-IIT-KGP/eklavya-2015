<launch>

    <!-- ================================================================== -->
    <!-- == Arguments ===================================================== -->
    <!-- ================================================================== -->
    <arg name="example_name" />
    <arg name="events" default="true" />
    <arg name="gui" default="true" />


    <!-- ================================================================== -->
    <!-- == Decision making node ========================================== -->
    <!-- ================================================================== -->
	<node 
        name="$(arg example_name)" 
        pkg="decision_making_examples" 
        type="$(arg example_name)" 
        output="screen" />


    <!-- ================================================================== -->
    <!-- == Events publisher ============================================== -->
    <!-- ================================================================== -->
    <node 
        if="$(arg events)" 
        name="$(arg example_name)_events" 
        pkg="decision_making_examples" 
        type="$(arg example_name)_events" 
        output="screen" />


    <!-- ================================================================== -->
    <!-- == Decision making rqt visualization plugin ====================== -->
    <!-- ================================================================== -->
    <node 
        if="$(arg gui)" 
        name="rqt" 
        pkg="rqt_gui" 
        type="rqt_gui" 
        args="-s rqt_decision_graph" 
        output="screen" />

</launch>
